@model IEnumerable<Domain.Models.MenuItem>

@{
    ViewData["Title"] = "Approved Menu Items";
}

<h2>Approved Menu Items</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No approved menu items.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Restaurant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>€@m.Price</td>
                    <td>@m.Restaurant?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
