@model IEnumerable<Domain.Models.Restaurant>

<h2>Pending Restaurants</h2>

<form method="post" asp-action="ApproveRestaurants">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Approve</th>
                <th>Name</th>
                <th>Owner Email</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@r.Id" />
                    </td>
                    <td>@r.Name</td>
                    <td>@r.OwnerEmailAddress</td>
                    <td>@r.Description</td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-success">Approve Selected</button>
</form>
