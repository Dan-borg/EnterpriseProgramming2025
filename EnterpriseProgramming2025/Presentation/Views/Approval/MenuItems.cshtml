@model IEnumerable<Domain.Models.MenuItem>

@{
    ViewData["Title"] = "Pending Menu Items";
}

<h2 class="mb-3">Pending Menu Items</h2>

<div class="mb-3">
    <a asp-controller="Approval" asp-action="Restaurants" class="btn btn-secondary me-2">
        Back to Restaurants
    </a>

    <a asp-controller="Items" asp-action="Catalog" class="btn btn-primary">
        View Catalog
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No menu items are pending approval.</div>
}
else
{
    <form method="post"
          asp-controller="Approval"
          asp-action="ApproveMenuItems">

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Select</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Restaurant ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="ids" value="@m.Id" />
                        </td>
                        <td>@m.Title</td>
                        <td>€@m.Price</td>
                        <td>@m.RestaurantId</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">
            Approve Selected
        </button>
    </form>
}
