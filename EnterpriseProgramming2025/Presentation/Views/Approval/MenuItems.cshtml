@model IEnumerable<Domain.Models.MenuItem>

<h2>Pending Menu Items</h2>

<form method="post" asp-action="ApproveMenuItems">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Approve</th>
                <th>Title</th>
                <th>Price</th>
                <th>Restaurant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@m.Id" />
                    </td>
                    <td>@m.Title</td>
                    <td>€@m.Price</td>
                    <td>@m.RestaurantId</td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-success">Approve Selected</button>
</form>
