@using Domain.Interfaces
@model IEnumerable<ItemValidating>

@{
    ViewData["Title"] = "Catalog";
    var viewMode = ViewBag.ViewMode as string ?? "card";
}

<h2>Catalog (@viewMode)</h2>

<div class="mb-3">
    <a asp-action="Catalog" asp-route-restaurantId="" asp-route-view="card" class="btn btn-primary">Restaurants (Card)</a>
    <a asp-action="Catalog" asp-route-restaurantId="" asp-route-view="row" class="btn btn-secondary">Restaurants (Row)</a>
</div>

@if (!Model.Any())
{
    <p>No items found.</p>
}
else
{
    foreach (var item in Model)
    {
        @await Html.PartialAsync(item.GetCardPartial(), item)
    }
}
