@model IEnumerable<Domain.Interfaces.IItemValidating>

@{
    ViewData["Title"] = "Preview Import";
}

<h2>Preview Import</h2>

<p>This is a preview of the items found in your JSON.</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Type</th>
            <th>Name / Title</th>
            <th>Owner / Price</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item is Domain.Models.Restaurant r)
            {
                        <tr>
                            <td>Restaurant</td>
                            <td>@r.Name</td>
                            <td>@r.OwnerEmailAddress</td>
                            <td>@r.Status</td>
                        </tr>
            }
            else if (item is Domain.Models.MenuItem m)
            {
                        <tr>
                            <td>Menu Item</td>
                            <td>@m.Title</td>
                            <td>€@m.Price</td>
                            <td>@m.Status</td>
                        </tr>
            }
        }
    </tbody>
</table>

<form method="post" asp-action="GenerateZip">
    <button class="btn btn-success">Generate ZIP with Default Images</button>
</form>

<hr />

<h3>Upload Edited ZIP</h3>

<form method="post" asp-action="Commit" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <input type="file" name="zipFile" class="form-control" />
    </div>

    <button class="btn btn-warning">Commit to Database</button>
</form>

